{
	"name": "@ericrovell/rational",
	"version": "0.5.2",
	"description": "Rational is rational numbers library written in JavaScript",
	"main": "index.js",
	"module": "index.mjs",
	"scripts": {
		"lint": "eslint src/**/*.ts tests/**/*.ts",
		"typecheck": "tsc --noEmit true",
		"test": "vitest run --coverage",
		"test:watch": "vitest",
		"build": "rm -rf ./dist/* && rollup --config",
		"postbuild": "cp *.json dist && cp *.md dist",
		"release": "standard-version",
		"publish:npm": "npm run build && npm run postbuild && cd dist && npm publish --access public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ericrovell/rational.git"
	},
	"keywords": [
		"math",
		"numbers",
		"rational",
		"fraction",
		"parser"
	],
	"author": "Eric Rovell",
	"types": "index.d.ts",
	"license": "MIT",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.39.0",
		"@typescript-eslint/parser": "^5.39.0",
		"@vitest/coverage-c8": "^0.24.0",
		"eslint": "^8.25.0",
		"lint-staged": "^13.0.3",
		"rollup": "^2.79.1",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.34.1",
		"simple-git-hooks": "^2.8.0",
		"tslib": "^2.4.0",
		"typescript": "^4.8.4",
		"vite": "^3.1.6",
		"vitest": "^0.24.0"
	},
	"exports": {
		".": {
			"import": "./index.mjs",
			"require": "./index.js",
			"default": "./index.mjs"
		},
		"./package.json": "./package.json"
	},
	"homepage": "https://github.com/ericrovell/rational#readme",
	"directories": {
		"test": "tests"
	},
	"engines": {
		"node": ">=12.0"
	},
	"lint-staged": {
		"*.{ts,js}": "eslint"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged",
		"pre-push": "npm run lint && npm run typecheck"
	}
}
